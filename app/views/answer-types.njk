{% from "govuk/components/textarea/macro.njk" import govukTextarea %}


{# NAME #}

{% macro name(question, hint) %}
{{ govukInput({
  label: {
    text: question,
    classes: "govuk-label--l",
    isPageHeading: true
  },
  hint: {
    text: hint
  },
  id: "full-name",
  name: "fullName",
  autocomplete: "name",
  spellcheck: false
}) }}
{% endmacro %}



{# OTHER DATE #}

{% macro other_date(question, hint) %}
{{ govukDateInput({
  id: "date",
  namePrefix: "date",
  fieldset: {
    legend: {
      text: question,
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: hint
  },
  items: [
    {
      name: "day",
      classes: "govuk-input--width-2"
    },
    {
      name: "month",
      classes: "govuk-input--width-2"
    },
    {
      name: "year",
